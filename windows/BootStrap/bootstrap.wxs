<?xml version='1.0' encoding='windows-1252'?>
<Wix xmlns='http://schemas.microsoft.com/wix/2006/wi'>
	<Bundle 
		Name="Functy Installer" 
		Manufacturer="David Llewellyn-Jones" 
		Version="$(env.productversion)" 
		UpgradeCode="09C207AF-0FC5-4FCF-B651-3BAAA474D948"
		>
	<Variable Name="InstallFolder" Value="[ProgramFilesFolder]Functy" />
	<BootstrapperApplicationRef Id="WixStandardBootstrapperApplication.HyperlinkLicense" />
	<WixVariable Id="WixStdbaLicenseUrl" Value="" />
	<WixVariable Id="WixStdbaLogo" Value="functy48.png" />
	<Chain>
		<MsiPackage 
			Id="Functy" 
			SourceFile="..\..\functy-$(env.productversion)-win32-bin.msi" 
			DisplayInternalUI="no" 
			Vital="yes" 
			Compressed="yes" 
			>
			<MsiProperty Name="INSTALLDIR" Value="[InstallFolder]" />
		</MsiPackage>
		<ExePackage 
			Id="GTK_2.12.9" 
			SourceFile="gtk-2.12.9-win32-2.exe" 
			PerMachine="yes" 
			Vital="yes" 
			Compressed="yes" 
			InstallCommand="/S" 
			/>
	</Chain>
  </Bundle>
</Wix>
